{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Parameters": {
    "LayerStackName": {
      "Description": "The name of the CloudFormation stack for the Lambda layer",
      "Type": "String"
    }
  },
  "Resources": {
    "OpenSkyDataPull": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "FunctionName": "OpenSkyDataPull",
        "Handler": "lambda_function.lambda_handler",
        "Role": {
          "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:role/Lambda2DynamoDB"
        },
        "Code": {
          "S3Bucket": {
            "Fn::Sub": "opensky-s3-bucket-temp-files-${AWS::AccountId}"
          },
          "S3Key": "lambda_function.zip"
        },
        "Runtime": "python3.11",
        "Layers": [
          {
            "Fn::ImportValue": {
              "Fn::Sub": "${LayerStackName}-LayerVersionArn"
            }
          }
        ]
      }
    },
    "EventBridgeRule": {
      "Type": "AWS::Events::Rule",
      "Properties": {
        "Description": "Trigger Lambda every 5 minutes",
        "ScheduleExpression": "rate(5 minutes)",
        "Targets": [
          {
            "Arn": {
              "Fn::GetAtt": ["OpenSkyDataPull", "Arn"]
            },
            "Id": "OpenSkyDataPullTarget"
          }
        ]
      }
    },
    "LambdaInvokePermission": {
      "Type": "AWS::Lambda::Permission",
      "Properties": {
        "Action": "lambda:InvokeFunction",
        "FunctionName": {
          "Fn::GetAtt": ["OpenSkyDataPull", "Arn"]
        },
        "Principal": "events.amazonaws.com",
        "SourceArn": {
          "Fn::GetAtt": ["EventBridgeRule", "Arn"]
        }
      }
    }
  }
}
