{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "CloudFormation template for launching an EC2 instance with an open SSH port",
  "Resources": {
    "SSHSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Enable SSH access via port 22",
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "FromPort": 22,
            "ToPort": 22,
            "CidrIp": "0.0.0.0/0"
          }
        ]
      }
    },
    "MyEC2Instance": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "InstanceType": "t2.micro",
        "SecurityGroupIds": [
          {"Ref": "SSHSecurityGroup"}
        ],
        "ImageId": "ami-08a52ddb321b32a8c",
        "IamInstanceProfile": "EC2toS3InstanceProfile",
        "UserData": {
          "Fn::Base64": {
            "Fn::Sub": [
              {
                "Fn::Join": [
                  "",
                  [
                    "#!/bin/bash\n",
                    "yum update -y\n",
                    "yum install python3-pip -y\n",
                    "mkdir python\n",
                    "pip3 install requests -t ./python\n",
                    "zip -r requests_layer.zip ./python\n",
                    "aws s3 cp requests_layer.zip s3://opensky-s3-bucket-temp-files-${AWS::AccountId}/\n"
                  ]
                ]
              },
              {}
            ]
          }
        }
      }
    }
  }
}
